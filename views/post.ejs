<%- include("header") -%>

<div class="box" id="heading">
  <h1> ToDo List </h1>
</div>
  
<div class="box">

  <% userItems.forEach(function(item) { %>
  <form action="/delete" method="post">
    <div class="item">
      <input type="checkbox" name="checkbox" value= "<%= item._id %>" onChange="this.form.submit()">
      <p> <%= item.content %> </p>
    </div>
    <input type="hidden" name="username" value= "<%= username %>" >
  </form>
  <%  }); %>

  <form action="/insert" method="post">
    <input class="newItem" type="text" name="newItem" placeholder="Enter New Item" autocomplete="off">
    <button class="bt expand" type="submit" name="user" value="<%= username %>"> + </button>
  </form>

</div>

<form action="/logout" method="post"> 
  <button type="submit" class="btn btn-dark" name="btn" value="login"> Logout </button>
</form>

<%- include("footer") -%>