<%- include("header") -%>
<div class="login">
  <div class="login">
    <form action="/login" class="form-signin" method="post">
        <h2> Log In to Your Account </h2>
        <input type="text" name="username" class="form-control" placeholder="username" autocomplete="off" required>
        <input type="password" name="password" class="form-control" placeholder="Password" required>
        <button class="btn btn-lg btn-block btn-dark expand margin" type="submit">Sign in</button>
        <p> <%= message %> </p>
        <div class="center-text margin"> <h3> OR </h3> </div>
        <div class="margin expand"> <a class="btn btn-lg btn-block  btn-dark" href="/auth/google"><img src="https://img.icons8.com/color/32/000000/google-logo.png"> SignIn Using Google </a> </div>
      </form>
    </div>
</div>
<%- include("footer") -%>